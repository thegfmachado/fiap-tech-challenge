{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "BYTEBANK_WEB_DOMAIN",
    "BYTEBANK_WEB_AUTH_DOMAIN",
    "BYTEBANK_WEB_AUTH_STATIC_PATH"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "server": {
      "dependsOn": ["^server"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
